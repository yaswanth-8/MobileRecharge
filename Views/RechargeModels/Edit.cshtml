@model MobileRecharge.Models.RechargeModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <form asp-action="Edit" class="border p-3 rounded shadow">
            <h3 class="text-center mb-3">Edit Plan</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PlanName" class="control-label font-weight-bold">Plan Name:</label>
                <input asp-for="PlanName" class="form-control" />
                <span asp-validation-for="PlanName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label font-weight-bold">Price:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label font-weight-bold">Description:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <hr/>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary mr-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
