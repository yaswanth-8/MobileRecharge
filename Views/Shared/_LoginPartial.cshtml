@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HowToUse">How To Use </a>
        </li>
        @if (User.IsInRole(SD.Role_Customer))
        {
            string userName = User.Identity.Name.Substring(0, User.Identity.Name.Length - 10);
            userName = char.ToUpper(userName[0]) + userName.Substring(1);
            <li class="nav-item">
            <a class="btn btn-outline-primary" href="/Customer/Profile">@userName Profile </a>
    </li>
        }
        @if (User.IsInRole(SD.Role_Admin))
        {
            string userName = User.Identity.Name.Substring(0, User.Identity.Name.Length - 10);
            userName = char.ToUpper(userName[0]) + userName.Substring(1);
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Hello ! @userName </a>
        </li>
        }
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
        </li>
      <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HowToUse">How To Use</a>
        </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
